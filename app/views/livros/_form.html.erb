<%= form_for(@livro, :html => {:multipart => true}) do|f| %>

  <p>
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </p>

  <p>
    <%= f.label :autor%><br />
    <%= f.text_field :autor %>
  </p>

  <p>
    <%= f.label :edicao%><br />
    <%= f.text_field :edicao %>
  </p>

	<%f.fields_for :vontades do |vontade| %>
		<p>
		<%= vontade.select :tipo, ([["possuo","possuo"],["quero","quero"]]) %>
		</p>
	<% end %>	
	<p>
    <%= f.submit 'Save' %>
  </p>
<% end %>
